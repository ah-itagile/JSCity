    "version": "0.2.0",
    "configurations": [

        

        {
            "type": "node",
            "request": "launch",
            "name": "JSCity",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/js/backend/generator.js",
            "args": ["${workspaceFolder}/js/backend/system", "--verbose", "-c", "System 1"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "JSCity Simplecalc",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/js/backend/generator.js",
            "args": ["${workspaceFolder}/js/backend/system", "--verbose", "--simplecalc", "-c", "System Simple 1"]
        },        
        {
            "type": "node",
            "request": "launch",
            "name": "JSCity XPMan",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/js/backend/generator.js",
            "args": ["${workspaceFolder}/js/backend/xpman", "--verbose", "--simplecalc", "-c", "XPMan1"]
        }
    ]
}